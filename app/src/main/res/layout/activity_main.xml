<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="ExtraText">
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="213dp"
        android:fontFamily="@font/manrope_medium"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="401dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/Обработка_ПД"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="177dp"
        android:layout_height="42dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="451dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/Обработка_ПД_2_часть"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn1"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/Начнём"
        android:textAllCaps="false"
        android:textColor="@color/btnStartColor"
        android:textSize="15sp"
        app:backgroundTint="@color/white"
        app:backgroundTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="442dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_code_of_conduct_1" />

</androidx.constraintlayout.widget.ConstraintLayout>